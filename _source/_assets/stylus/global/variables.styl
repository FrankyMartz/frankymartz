@require "../util/function"

// Typography
// =============================================

$font = {
	sans: "Lato"\, "Lucida Grand"\, "Lucida Sans Unicode"\, "Helvetica Neue"\, Helvetica\, Arial sans-serif
	serif: "Noticia Text"\, Georgia\, Times\, serif
	mono: Menlo\, Consolas\, Courier\, monospace\, serif
}


// Colors
// =============================================

$color = {
	text: {
		light: lighten(#4B4B50, 35%),
		base: #4B4B50
		dark: darken(#4B4B50, 35%)
	},
	white: {
		pure: #FFF
		grey: #F4F4F4
	},
	black: {
		pure: #000,
		grey: #333
	},
	grey: {
		light: #BBB,
		base: #999
	},
	salmon: {
		light: #F49171,
		base: #DD7060,
		dark: #DA3C25
	},
	teal: {
		light: #8CD8D5,
		base: darken(#8CD8D5, 15%),
		dark: darken(#8CD8D5, 30%)
	}
}


// Responsive Breakpoint
// =============================================

$view = {
	sm: pxToEm(480px),	// Phone
	md: pxToEm(768px),	// Tablet
	lg: pxToEm(992px),	// Desktop
	xl: pxToEm(1200px),	// Large Desktop
}

