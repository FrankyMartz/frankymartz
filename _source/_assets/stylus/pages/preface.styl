/*! ==========================================
 * Foreword
 *
 * .foreword
 * .foreword__fig
 * .foreword-fig__img
 *
 * .foreword-fig--flip
 * .foreword-fig__side1
 * .foreword-fig__side2
 * .js-foreword-fig-side1--flip
 * .js-foreword-fig-side2--flip
 *
 * .foreword__txt
 * .foreword-txt--wrap
 * .foreword-txt__button
 * .foreword-txt__description
 * ========================================== */

@require '../util/function'

.foreword
	margin-top: 1.5rem
	margin-left: auto
	margin-right: auto

.foreword__fig
	display: block
	position: relative
	margin: 0 auto
	max-height: 450px
	max-width: 450px
	cursor: pointer

.foreword-fig__img
	max-width: 100%
	height: auto

.foreword__txt
	width: 100%
	height: 100%
	margin: 0 auto
	max-width: 450px

.foreword-txt--wrap
	width: 100%
	height: 100%
	max-height: 450px
	min-height: 340px
	justify-content: center

.no-js .foreword-txt__button
	display: none;

.foreword-txt__button
	position: relative
	width: 5em
	max-height: 4.5rem
	margin-top: 1.5rem
	margin-bottom: 2rem
	border-radius: 5px
	background-image: linear-gradient($color-link.body.default, $color-link.body.default)
	background-size: 100%
	fontSmoothing(true)
	font-style: italic
	font-weight: 700
	font-size: 2rem
	line-height: 4.5rem
	text-align: center
	cursor: pointer
	animation: clicky 0.65s ease-in-out
	&:after
		content: "Yep."
		position: absolute
		top: 0
		left: 0
		width: 100%
		height: 0
		background-image: linear-gradient($color.text.base, $color.text.base)
		background-size: 100%
		border-radius: 5px
		text-align: center
		color: #FFF
		overflow: hidden
		transition: all 0.5s
		fontSmoothing(true)
	&:hover:after
		height: 100%

.js .foreword-txt__description
	display: none

.foreword-txt__description
	width: 100%
	margin-top: 1.5em
	margin-bottom: 2em


/*! Image Flip
 * Version: 1.0.0
 * ========================================== */

// .foreword-fig--flip
// .foreword-fig__side1
// .foreword-fig__side2
// .js-foreword-fig-side1--flip
// .js-foreword-fig-side2--flip

.foreword-fig--flip
	position: absolute
	box-shadow: none
	backface-visibility: hidden
	transform-origin: 50% 50% 0
	transition: all 1s

.foreword-fig__side1
	transform: rotateX( 0deg )

.foreword-fig__side2
	background-color: rgb(91,158,195)
	/*margin-top: -100%;*/
	transform: rotateX( 180deg )

.js-foreword-fig-side1--flip
	transform: rotateX( 0deg ) !important

.js-foreword-fig-side2--flip
	transform: rotateX( 180deg ) !important


/*! Foreword: Screen >= Desktop
 * ===========================================*/

+responsiveBreakPoint($view.md)
	.foreword__txt
		margin-left: 1.5rem
		min-height: 340px

	.foreword-txt__button
		align-self: center
		margin-top: 0

	.foreword-txt__description
		margin-top: 0
		margin-bottom: 0


